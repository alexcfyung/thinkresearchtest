<%= link_to 'Add Encounter', new_patient_encounter_path %>
<table>
  <tr>
    <th>Visit Number</th>
    <th>Admitted At</th>
	<th>Discharged At</th>
    <th>Actions</th>
  </tr>
 
  <% @patient.encounters.each do |encounter| %>
    <tr>
      <td><%= encounter.visit_number %></td>
      <td><%= encounter.admitted_at %></td>
      <td><%= encounter.discharged_at %></td>
      <td>
	  <%= link_to 'Show', patient_encounter_path(encounter) %>
	  <%= link_to 'Edit', edit_patient_encounter_path(encounter) %>
	  <%= link_to 'Destroy', patient_encounter_path(encounter), 
			method: :delete,
			data: { confirm: 'Are you sure to delete this encounter?' } %>
	  </td>
    </tr>
  <% end %>
</table>